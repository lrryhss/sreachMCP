# Research Agent Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=false

# API Server
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Ollama Configuration
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=120

# MCP Server Configuration
MCP_SEARXNG_URL=http://host.docker.internal:8090
MCP_TIMEOUT=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Content Fetching
MAX_CONCURRENT_FETCHES=5
FETCH_TIMEOUT=10
USER_AGENT=ResearchAgent/1.0

# Research Settings
DEFAULT_RESEARCH_DEPTH=standard
MAX_SOURCES=20
MAX_RESEARCH_TIME=300

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Optional: External Services
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Optional: Database (for future use)
# DATABASE_URL=postgresql://user:pass@localhost/researchdb

# Optional: Authentication (for future use)
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24