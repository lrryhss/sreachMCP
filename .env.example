# SearXNG Configuration
# Base URL of your SearXNG instance
SEARXNG_BASE_URL=http://localhost:8888

# Optional: Authentication for protected SearXNG instances
# SEARXNG_AUTH_USER=username
# SEARXNG_AUTH_PASS=password

# MCP Server Configuration
# Transport type: stdio or sse
MCP_TRANSPORT=stdio

# SSE Transport settings (only used if MCP_TRANSPORT=sse)
MCP_HOST=127.0.0.1
MCP_PORT=32769

# Search Settings
# Maximum number of search results to return
MAX_RESULTS=10

# Default language for searches
DEFAULT_LANGUAGE=en

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO